    <scene>
        <Scene>
            <AnchorPane prefHeight="160.0" prefWidth="400.0">
            <children>
               <Button layoutX="200.0" layoutY="116.0" onAction="#onEditCategory" prefHeight="30.0" prefWidth="182.0" text="Actualizar" />
               <Button layoutX="14.0" layoutY="116.0" onAction="#onCancel" prefHeight="30.0" prefWidth="180.0" text="Cancelar" />
               <TextField fx:id="categoryNameTextField" layoutX="12.0" layoutY="71.0" prefHeight="30.0" prefWidth="370.0" promptText="Nombre de la categoría" />
               <Label layoutX="14.0" layoutY="14.0" text="Editar categoría">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Label>
               <Label layoutX="14.0" layoutY="49.0" text="Nombre de la categoría:" />
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
